{
  "name": "flow-cadut",
  "scripts": {
    "build": "lerna run build",
    "test": "jest",
    "lint": "eslint .",
    "lintfix": "eslint --fix .",
    "prerelease": "npm run build && npm run test",
    "release": "changeset publish"
  },
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "babel-jest": "^28.1.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "lerna": "^5.1.8",
    "prettier": "^2.7.1"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/templates/*.js",
      "**/generated/**/*",
      "**/dist/**/*",
      "**/*.hbs"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "bracketSpacing": false,
    "arrowParens": "avoid"
  }
}
